{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Main window capabilities for CachePhoenix",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:event:default",
    "shell:allow-open",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-stat",
    "notification:default",
    "notification:allow-notify",
    "notification:allow-request-permission",
    "macos-permissions:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$HOME/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/ffmpeg", "sidecar": true, "args": true },
        { "name": "binaries/ffprobe", "sidecar": true, "args": true }
      ]
    }
  ]
}
